<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>fuel.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>placard</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
  </animation>

  <!-- working for Rembrandt -->
  <effect>
    <inherits-from>Aircraft/EchoAirCanard/Models/Effects/Glass/glass</inherits-from>
    <object-name>vitre</object-name>
  </effect>
  
  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <object-name>face</object-name>
    <object-name>placard</object-name>
    <object-name>needle</object-name>

    <object-name>vitre</object-name>
    <condition>
<and>
      <property>/controls/electric/battery-switch</property>
<property>/controls/lighting/instrument-lights</property>
</and>
    </condition>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.8 </blue>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>consumables/fuel/tank[1]/level-gal_us</property>
    <interpolation>
      <entry><ind>  0.00 </ind><dep>  0 </dep></entry>
      <entry><ind>  5.25 </ind><dep> 23 </dep></entry>
      <entry><ind> 10.50 </ind><dep> 46 </dep></entry>
      <entry><ind> 15.75 </ind><dep> 69 </dep></entry>
      <entry><ind> 20.10 </ind><dep> 93 </dep></entry>
    </interpolation>
    <center>
      <x-m>  0.000 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.006 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
  </animation>

</PropertyList>

