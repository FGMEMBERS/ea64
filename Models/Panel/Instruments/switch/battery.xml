<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>
  
  <path>on-offR.ac</path>
    <nasal>
    <load>
set('/controls/flight/elevator-trim', 1)
    </load>
  </nasal>
  <animation>
    <!-- Objets opaques -->
    <object-name>base</object-name>
    <object-name>on-off</object-name>
    
    <!-- Objets transparents -->
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>base</object-name>
    <object-name>on-off</object-name>
    <condition>
<and>
      <property>/controls/electric/battery-switch</property>
<property>/controls/lighting/instrument-lights</property>
</and>
    </condition>
    <emission>
      <red>   0.8 </red>
      <green> 0.8 </green>
      <blue>  0.8 </blue>
    </emission>
  </animation>
  
  <animation>
    <object-name>on-off</object-name>
    <type>rotate</type>
    <property>controls/electric/battery-switch</property>
    <factor>  35 </factor>
    <min-deg>  0 </min-deg>
    <max-deg> 35 </max-deg>
    <axis>
      <x>  0 </x>
      <y> -1 </y>
      <z>  0 </z>
    </axis>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>on-off</object-name>
    <visible>true</visible>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>controls/electric/battery-switch</property>
      </binding>
      <binding>
        <command>property-toggle</command>
        <property>sim/model/sound/click</property>
      </binding>
      <binding>
	<command>property-toggle</command>
        <property>/instrumentation/zkv1000/pfd/status</property>
      </binding><!--
      <binding>
	<command>property-toggle</command>
        <property>/sim/model/material/instruments/factor</property>
      </binding>-->
    </action>
  </animation>
  
</PropertyList>
